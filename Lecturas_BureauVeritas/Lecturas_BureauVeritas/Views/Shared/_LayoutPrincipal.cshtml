@using DSIGE
@using DSIGE.Modelo
@using DSIGE.Negocio

@{
    List<Sesion_Modulo> oSe = new List<Sesion_Modulo>();
    
    if (Session["Session_Usuario_Acceso"] == null)
    {
        Response.Redirect("../Login/Login");
    }else{
        oSe = ((Sesion)Session["Session_Usuario_Acceso"]).modulo;
    }

    int cuenta = 1;
    
}

