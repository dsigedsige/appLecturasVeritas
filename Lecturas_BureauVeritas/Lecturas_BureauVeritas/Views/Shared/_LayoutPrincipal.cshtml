        }

        .thumbnail {
            margin-bottom: 5px !important;
        }

        legend {
            margin-bottom: 5px;
            border-width: 0;
            padding: 0 10px;
            font-size: 13px;
            font-weight: bold;
            width: auto;
        }

        .fixed-table-container {
            border-top-left-radius: 0 !important;
            border-top-right-radius: 0 !important;
        }

        /*Panel*/
        .panel-heading,
        .modal-header {
            padding: 10px 15px;
            border-top-left-radius: 2px;
            border-top-right-radius: 2px;
        }

        .panel-body {
            padding: 10px;
        }

        .panel-oscuro {
            border-color: #34495e;
        }

            .panel-oscuro > .panel-heading {
                color: #fff;
                background-color: #777;
                border-color: #777;
                font-family: 'Quicksand', sans-serif;
            }

        /*JQuery Upload*/
        .ajax-file-upload {
            text-align: center;
        }

