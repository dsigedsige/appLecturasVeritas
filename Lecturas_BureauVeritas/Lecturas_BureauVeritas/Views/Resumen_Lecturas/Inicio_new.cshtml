        function listaLecturaResumen() {
            var $servicio = '';

            var list = [];

            if ($("#idservicios").val() == -1) {
                new PNotify({
                    title: 'Sistemas',
                    text: 'Por favor seleccione un Servicio. Muchas gracias.',
                    type: 'error'
                });
                return;
            }

            if ($("#idservicios").val() == 0) {
                $("#idservicios option").each(function () {
                    var x = parseInt($(this).attr('value'))
                    if (x == 0 || x == -1) {

                    }
                    else {
