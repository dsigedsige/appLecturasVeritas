            else {
                list.push($("#idservicios").val());
            }

            $.ajax({
                async: true,
                beforeSend: function (xhr) {
                    $('.sige-load').show();
                },
                url: 'JsonListaLecturasResumen',
                type: 'POST',
                dataType: 'json',
